<?xml version="1.0" encoding="utf-8"?>
<com.jumpintorivet.rivet.components.OmniBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rivet_light_blue">

    <IconButton xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/components_omni_bar_menu_button"
        android:layout_width="@dimen/omni_bar_button_width"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-5dp"
        android:paddingLeft="2dp"
        android:paddingTop="1dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="{fa-bars}"
        android:textColor="@android:color/white"
        android:textSize="@dimen/default_button_text_size" />

    <ImageButton
        android:id="@+id/components_omni_bar_score_button"
        android:layout_width="@dimen/omni_bar_button_width"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingTop="2dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:scaleType="fitCenter"
        android:background="?attr/selectableItemBackground"
        android:layout_toRightOf="@id/components_omni_bar_menu_button"
        android:src="@drawable/frog_icon" />

    <IconButton xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/components_omni_bar_share_button"
        android:layout_width="@dimen/omni_bar_button_width"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="-2dp"
        android:paddingRight="-2dp"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/components_omni_bar_close_button"
        android:layout_centerVertical="true"
        android:text="{fa-share-alt}"
        android:textColor="@android:color/white"
        android:textSize="@dimen/default_button_text_size" />

    <IconButton xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/components_omni_bar_close_button"
        android:layout_width="@dimen/omni_bar_button_width"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="1dp"
        android:text="{fa-times}"
        android:textColor="@android:color/white"
        android:textSize="@dimen/default_button_text_size" />

    <LinearLayout
        android:id="@+id/components_omni_bar_chat_button"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:paddingTop="3dp"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_centerInParent="true"
        android:background="@drawable/chat_button_background">

        <IconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_button_text_size"
            android:textColor="@color/rivet_light_blue"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="{fa-comment}"/>

        <TextView
            android:id="@+id/components_omni_bar_chat_button_text"
            android:paddingLeft="@dimen/half_standard_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:textSize="@dimen/explanatory_text_size"
            android:textColor="@color/rivet_light_blue"/>
    </LinearLayout>
</com.jumpintorivet.rivet.components.OmniBar>