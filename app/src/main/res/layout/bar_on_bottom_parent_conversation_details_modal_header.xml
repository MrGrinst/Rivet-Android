<?xml version="1.0" encoding="utf-8"?>
<com.jumpintorivet.rivet.activities.bar_on_bottom.conversation_viewing.ParentConversationDetailsModalHeader xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bar_on_bottom_parent_conversation_details_modal_header_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_explanatory_text_size"
        android:textColor="@color/rivet_light_blue"
        android:paddingTop="2dp"
        android:layout_margin="@dimen/standard_margin"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/bar_on_bottom_parent_conversation_details_modal_header_description"
        android:layout_width="match_parent"
        android:textSize="@dimen/explanatory_text_size"
        android:textColor="@color/rivet_off_black"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_margin"
        android:layout_marginLeft="@dimen/double_standard_margin"
        android:layout_marginRight="@dimen/double_standard_margin"/>
</com.jumpintorivet.rivet.activities.bar_on_bottom.conversation_viewing.ParentConversationDetailsModalHeader>