<?xml version="1.0" encoding="utf-8"?>
<com.jumpintorivet.rivet.components.conversation_view.MessageListRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.jumpintorivet.rivet.components.base.MaskableTextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/components_conversation_view_message_list_row_message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/half_standard_margin"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginRight="@dimen/standard_margin"
        android:layout_marginTop="@dimen/half_standard_margin"
        android:autoLink="web"
        android:background="@drawable/message_bubble"
        android:minWidth="@dimen/minimum_message_text_width"
        android:paddingBottom="@dimen/standard_margin"
        android:paddingLeft="@dimen/conversation_message_left_right_padding"
        android:paddingRight="@dimen/conversation_message_left_right_padding"
        android:paddingTop="@dimen/standard_margin"
        android:textColor="@color/rivet_off_black"
        android:textSize="@dimen/user_content_text_size" />

    <com.jumpintorivet.rivet.components.base.RectMaskableImageView
        android:id="@+id/components_conversation_view_message_list_row_message_text_coverer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/half_standard_margin"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginRight="@dimen/standard_margin"
        android:layout_marginTop="@dimen/half_standard_margin"
        android:src="@drawable/message_bubble" />
</com.jumpintorivet.rivet.components.conversation_view.MessageListRow>