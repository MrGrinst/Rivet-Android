<?xml version="1.0" encoding="utf-8"?>
<com.jumpintorivet.rivet.components.conversation_view.ConversationEndedListRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/standard_margin"
    android:paddingTop="@dimen/standard_margin">

    <TextView
        android:id="@+id/components_conversation_view_conversation_ended_list_row_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/rivet_off_black"
        android:textSize="@dimen/explanatory_text_size" />

    <include
        android:id="@+id/components_conversation_view_conversation_ended_list_row_start_conversation_view_frame"
        layout="@layout/components_start_new_conversation_view"
        android:layout_width="@dimen/square_side_length"
        android:layout_height="@dimen/square_side_length"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginBottom="@dimen/standard_margin"
        android:gravity="center" />
</com.jumpintorivet.rivet.components.conversation_view.ConversationEndedListRow>