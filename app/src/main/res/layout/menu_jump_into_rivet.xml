<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/rivet_light_blue"
        android:minHeight="0dp"
        app:contentInsetStart="0dp">

        <IconButton xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/menu_jump_into_rivet_back_button"
            android:layout_width="@dimen/omni_bar_button_width"
            android:layout_height="fill_parent"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="2dp"
            android:text="{fa-chevron-left}"
            android:textColor="@android:color/white"
            android:textSize="@dimen/explanatory_text_size"></IconButton>

        <TextView
            style="@style/ToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jump_into_rivet" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginRight="@dimen/standard_margin"
        android:layout_marginTop="@dimen/half_standard_margin"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jump_into_rivet_top_text"
                android:textColor="@color/rivet_off_black"
                android:textSize="@dimen/explanatory_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/ground_rules"
                android:textColor="@color/rivet_dark_blue"
                android:textSize="@dimen/large_explanatory_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jump_into_rivet_rules"
                android:textColor="@color/rivet_off_black"
                android:textSize="@dimen/explanatory_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/double_standard_margin"
                android:gravity="center_horizontal"
                android:text="@string/jump_in_explore_your_community"
                android:textColor="@color/rivet_dark_blue"
                android:textSize="@dimen/large_explanatory_text_size" />

            <ImageView
                android:id="@+id/menu_jump_into_rivet_frog_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/standard_margin"
                android:src="@drawable/frogicon100px" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
