<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.jumpintorivet.rivet.components.sliding_tab.SlidingTabLayout
            android:id="@+id/bar_on_bottom_list_fragment_sliding_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rivet_dark_blue" />

        <android.support.v4.view.ViewPager
            android:id="@+id/bar_on_bottom_list_fragment_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</FrameLayout>
