<?xml version="1.0" encoding="utf-8"?>
<com.jumpintorivet.rivet.components.start_new_conversation_box.StartNewConversationView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/fake_id"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:layout_width="1dp"
        android:layout_height="1dp" />

    <com.jumpintorivet.rivet.components.start_new_conversation_box.RoundedSquareView
        android:id="@+id/components_start_new_conversation_view_square"
        android:layout_below="@+id/fake_id"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/square_side_length"
        android:layout_height="@dimen/square_side_length">

        <IconTextView
            android:id="@+id/components_start_new_conversation_view_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:textColor="@color/rivet_off_white" />
    </com.jumpintorivet.rivet.components.start_new_conversation_box.RoundedSquareView>

    <LinearLayout
        android:id="@+id/components_start_new_conversation_view_bottom_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/components_start_new_conversation_view_square"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/standard_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/components_start_new_conversation_view_bottom_label_text"
            android:textSize="@dimen/explanatory_text_size"
            android:textColor="@color/rivet_off_black"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.github.rahatarmanahmed.cpv.CircularProgressView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/components_start_new_conversation_view_progress_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            app:cpv_color="@color/rivet_off_black"
            app:cpv_indeterminate="true" />
    </LinearLayout>
</com.jumpintorivet.rivet.components.start_new_conversation_box.StartNewConversationView>